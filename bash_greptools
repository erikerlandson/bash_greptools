gps() {
    ps -ef | grep "$1"
}

ge() {
    env | grep "$1"
}

gfind() {
    local e="$1"
    if [ -z "$e" ]; then return; fi
    local g="$2"
    if [ -z "$g" ]; then g="*"; fi
    local d="$3"
    if [ -z "$d" ]; then d="."; fi
    eval "grep -R -n --include=$g $e $d" 
}

cgrep() {
    gfind "$1" '*.{c,cpp,C}' "$2"
}

hgrep() {
    gfind "$1" '*.{h,hpp,H}' "$2"
}

chgrep() {
    gfind "$1" '*.{c,cpp,C,h,hpp,H}' "$2"
}
